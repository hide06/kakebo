{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container">
        <h1>Connexion</h1>

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post">
            <label for="username">Email:</label>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required>

            <label class="mt-3" for="password">Password:</label>
            <input class="form-control" type="password" id="password" name="_password" required>

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"> #}

            <button class="btn btn-success mt-3" type="submit">Se connecter</button>
        </form>

        <br>
        <a href="{{ path('app_register') }}">Pas encore inscrit ?</a>
    </div>
{% endblock %}
