{% extends 'base.html.twig' %}

{% block title %}Historique{% endblock %}

{% block body %}
    <div class="container">
        {% include 'home/_menu.html.twig' %}

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4>Historiques</h4>
            <a href="{{ path('app_history_add') }}" class="btn btn-primary">Ajouter un nouveau mois</a>
        </div>

        <ul>
            {% for kakebo in kakebos %}
                <li><a href="#">{{ kakebo.yearMonthDate|date('F - Y') }}</a></li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
